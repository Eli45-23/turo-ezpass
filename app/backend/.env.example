# Turo EZPass Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_CLIENT_SECRET=your_cognito_client_secret
COGNITO_REGION=us-east-1
VALIDATE_WITH_COGNITO=false

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/turoezpass
DB_HOST=localhost
DB_PORT=5432
DB_NAME=turoezpass
DB_USER=dbadmin
DB_PASSWORD=your_db_password
DB_SSL=false
DB_MAX_CONNECTIONS=20
INIT_DB=true

# AWS Secrets Manager
DB_CREDENTIALS_SECRET_NAME=turo-ezpass/database/credentials
OAUTH_SECRETS_SECRET_NAME=turo-ezpass/oauth/secrets
EZPASS_CREDENTIALS_SECRET_NAME=turo-ezpass/ezpass/credentials

# S3 Configuration
S3_BUCKET_NAME=turo-ezpass-storage-bucket
S3_REGION=us-east-1
S3_KMS_KEY_ID=your_s3_kms_key_id

# EventBridge Configuration
EVENT_BUS_NAME=turo-ezpass-events

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External APIs
TURO_API_BASE_URL=https://api.turo.com
TURO_CLIENT_ID=your_turo_client_id
TURO_CLIENT_SECRET=your_turo_client_secret

# E-ZPass Configuration
EZPASS_NY_BASE_URL=https://www.e-zpassny.com
EZPASS_NJ_BASE_URL=https://www.ezpassnj.com
EZPASS_TIMEOUT_MS=30000

# Job Processing
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY_MS=5000
JOB_TIMEOUT_MS=300000
JOB_BATCH_SIZE=5

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@turo-ezpass.com

# Admin Configuration
ADMIN_EMAIL=admin@turo-ezpass.com

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here

# Monitoring
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENDPOINT=/api/metrics

# Development
DEBUG=turo-ezpass:*

# Production Overrides (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# DB_SSL=true
# VALIDATE_WITH_COGNITO=true
# INIT_DB=false